<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |f| %>
    <tr>
      <td><%= f.title %></td>
      <td><%= f.text %></td>
      <td><%= link_to 'Show', article_path(f) %></td>
      <td><%= link_to 'Edit', edit_article_path(f) %></td>
      <td><%= link_to 'Destroy', article_path(f),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>